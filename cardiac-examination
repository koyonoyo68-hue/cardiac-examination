<script>
    let currentStep = 1;
    const totalSteps = 5;

    // --- NAVIGATION LOGIC ---
    function updateUI() {
        // Cards
        document.querySelectorAll('.card').forEach(el => el.classList.remove('active'));
        document.getElementById(`step-${currentStep}`).classList.add('active');

        // Nav Steps
        document.querySelectorAll('.step-item').forEach((el, index) => {
            if (index + 1 === currentStep) el.classList.add('active');
            else el.classList.remove('active');
        });

        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function nextStep() {
        if(currentStep < totalSteps) {
            currentStep++;
            updateUI();
        }
    }

    function prevStep() {
        if(currentStep > 1) {
            currentStep--;
            updateUI();
        }
    }

    function goToStep(step) {
        currentStep = step;
        updateUI();
    }

    // --- INTERACTIVITY ---

    // Dark Mode
    function toggleTheme() {
        const body = document.body;
        const btn = document.querySelector('.theme-toggle');
        if (body.getAttribute('data-theme') === 'light') {
            body.setAttribute('data-theme', 'dark');
            btn.textContent = '‚òÄ';
        } else {
            body.setAttribute('data-theme', 'light');
            btn.textContent = 'üåô';
        }
    }

    // Valve Selection
    function selectValve(name, desc) {
        const infoBox = document.getElementById('valve-info');
        infoBox.innerHTML = `<strong style="color:var(--primary); font-size:1.1rem;">${name} Area</strong><br>${desc}`;
        infoBox.style.borderColor = var(--accent);
    }

    // Simulated Audio
    function playSimulatedAudio() {
        alert("üéß Audio Feature: In a real deployment, this would play an .mp3 file of the heart sound.");
    }

    // Checklist Logic
    function toggleCheck(checkbox) {
        const parent = checkbox.parentElement;
        if(checkbox.checked) {
            parent.classList.add('completed');
        } else {
            parent.classList.remove('completed');
        }
    }

    // Quiz Logic
    function checkAnswer(element, isCorrect) {
        // Reset siblings
        let siblings = element.parentElement.querySelectorAll('.quiz-option');
        siblings.forEach(sib => {
            sib.classList.remove('correct', 'wrong');
            sib.style.pointerEvents = 'none'; // Disable further clicks
        });

        if(isCorrect) {
            element.classList.add('correct');
            element.innerHTML += " ‚úÖ Correct!";
        } else {
            element.classList.add('wrong');
            element.innerHTML += " ‚ùå Incorrect. Try reviewing Step 4.";
        }
    }
</script>

</body>
